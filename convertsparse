#include <stdio.h>

void sparse(int a[][10], int m, int n) {
int k = 1;
int b[100][3];
b[0][0] = m;
b[0][1] = n;

for (int i = 0; i < m; i++) {  
    for (int j = 0; j < n; j++) {  
        if (a[i][j] != 0) {  
            b[k][0] = i;  
            b[k][1] = j;  
            b[k][2] = a[i][j];  
            k++;  
        }  
    }  
}  

b[0][2] = k - 1; // Number of non-zero elements  

printf("The sparse matrix:\n");  
for (int i = 0; i < k; i++) {  
    printf("%d\t%d\t%d\n", b[i][0], b[i][1], b[i][2]);  
}

}

int main() {
int m, n,i,j;
int a[10][10];

printf("Enter row & column of matrix: ");  
scanf("%d%d", &m, &n);  

printf("Enter elements:\n");  
for (i = 0; i < m; i++) {  
    for ( j = 0; j < n; j++) {  
        scanf("%d", &a[i][j]);  
    }  
}  

sparse(a, m, n);

}
