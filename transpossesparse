#include <stdio.h>

#define MAX 20

// Function to perform transpose of sparse matrix
void transpose(int a[MAX][3], int b[MAX][3]) {
    int i, j, k = 1;
    b[0][0] = a[0][1]; // rows become cols
    b[0][1] = a[0][0]; // cols become rows
    b[0][2] = a[0][2]; // number of non-zeros

    for (i = 0; i < a[0][1]; i++) {   // go through all columns of 'a'
        for (j = 1; j <= a[0][2]; j++) {
            if (a[j][1] == i) {   // if element belongs to column i
                b[k][0] = a[j][1];
                b[k][1] = a[j][0];
                b[k][2] = a[j][2];
                k++;
            }
        }
    }
}

int main() {
    int a[MAX][3], b[MAX][3];
    int i, m, n, t;

    printf("Enter number of rows, columns and non-zero elements: ");
    scanf("%d %d %d", &m, &n, &t);

    a[0][0] = m;
    a[0][1] = n;
    a[0][2] = t;

    printf("Enter sparse matrix in 3-tuple form (row col value):\n");
    for (i = 1; i <= t; i++) {
        scanf("%d %d %d", &a[i][0], &a[i][1], &a[i][2]);
    }

    // Transpose
    transpose(a, b);

    // Print result
    printf("\nTranspose in 3-tuple form:\n");
    for (i = 0; i <= b[0][2]; i++) {
        printf("%d\t%d\t%d\n", b[i][0], b[i][1], b[i][2]);
    }

    return 0;
}
